@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary float-end">
                <i class="bi bi-plus-square"></i>&nbsp; Create New Category
            </a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                @*<th>
                    ID
                </th>*@
                <th>
                    Name
                </th>
                <th>
                    Order
                </th>
                <th>
                    Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    @*<td width="20%">
                        @obj.Id
                    </td>*@
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.DisplayOrder
                    </td>
                    <td width="30%">
                        @obj.CreateDateTime
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
